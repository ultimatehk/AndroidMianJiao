<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" mce_bogus="1" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_up_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_off_down_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_off_down</item>
    </style>

    <style name="BaseHorizontalDivideLine">
        <item name="android:layout_height">@dimen/default_divide_line</item>
    </style>

    <style name="DefaultHorizontalDivideLine" parent="BaseHorizontalDivideLine">
        <item name="android:background">@color/default_divide_line_bg</item>
    </style>

    <style name="BaseHomeFragmentText">
        <item name="android:textSize">@dimen/homefragment_text_size</item>
    </style>

    <style name="HomeFragmentDarkGrayText" parent="BaseHomeFragmentText">
        <item name="android:textColor">@color/default_dark_gray</item>
    </style>

    <style name="HomeFragmentSelectTabText" parent="BaseHomeFragmentText">
        <item name="android:textColor">@color/selector_homefragment_tab_text_color</item>
    </style>

</resources>