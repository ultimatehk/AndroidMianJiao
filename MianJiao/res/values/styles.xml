<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" mce_bogus="1" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_up_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_off_down_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_off_down</item>
    </style>

    <style name="BaseHorizontalDivideLine">
        <item name="android:layout_height">@dimen/default_divide_line</item>
    </style>

    <style name="DefaultHorizontalDivideLine" parent="BaseHorizontalDivideLine">
        <item name="android:background">@color/default_light_divide_line</item>
    </style>

    <!-- Tab -->
    <style name="TabRightNum">
        <item name="android:textSize">@dimen/homebottom_order_num_text_size</item>
        <item name="android:textColor">@color/default_white</item>
    </style>
    <!-- SearchFragment -->
    <style name="BaseSearchFragmentText">
        <item name="android:textSize">@dimen/searchfragment_text_size</item>
    </style>

    <style name="SearchFragmentDarkGrayText" parent="BaseSearchFragmentText">
        <item name="android:textColor">@color/default_dark_gray</item>
    </style>

    <style name="SearchFragmentSelectTabText" parent="BaseSearchFragmentText">
        <item name="android:textColor">@color/selector_homefragment_tab_text_color</item>
    </style>
    <!-- HomeFragmentAdapterItem -->
    <style name="HomeAdapterGoodNameText">
        <item name="android:textSize">@dimen/home_adapter_item_good_name_text_size</item>
        <item name="android:textColor">@color/default_dark_gray</item>
    </style>

    <style name="HomeAdapterRMBText">
        <item name="android:textSize">@dimen/home_adapter_item_rmb_text_size</item>
        <item name="android:textColor">@color/default_dark_blue</item>
    </style>

    <style name="HomeAdapterGoodPriceText">
        <item name="android:textSize">@dimen/home_adapter_item_good_price_text_size</item>
        <item name="android:textColor">@color/default_dark_blue</item>
    </style>

    <style name="HomeAdapterDistanceAddressText">
        <item name="android:textSize">@dimen/home_adapter_item_distance_address_text_size</item>
        <item name="android:textColor">@color/default_more_light_blue</item>
    </style>
    <!-- GoodsListFragmentAdapterItem -->
    <style name="GoodsListAdapterGoodNameText">
        <item name="android:textSize">@dimen/goods_list_adapter_item_good_name_text_size</item>
        <item name="android:textColor">@color/default_dark_gray</item>
    </style>

    <style name="GoodsListAdapterRMBText">
        <item name="android:textSize">@dimen/goods_list_adapter_item_rmb_text_size</item>
        <item name="android:textColor">@color/default_dark_blue</item>
    </style>

    <style name="GoodsListAdapterGoodPriceText">
        <item name="android:textSize">@dimen/goods_list_adapter_item_good_price_text_size</item>
        <item name="android:textColor">@color/default_dark_blue</item>
    </style>

    <style name="GoodsListAdapterDistanceAddressText">
        <item name="android:textSize">@dimen/goods_list_adapter_item_distance_address_text_size</item>
        <item name="android:textColor">@color/default_more_light_blue</item>
    </style>
    <!-- 滚动条 -->
    <style name="ScrollbarStyle">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarSize">@dimen/scrollbar_width</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
    </style>
    <!-- ListViewStyle -->
    <style name="ListViewStyle" parent="ScrollbarStyle">
        <item name="android:divider">@color/default_transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@color/default_transparent</item>
    </style>

</resources>