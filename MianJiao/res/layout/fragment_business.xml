<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/business_default_vertical_padding"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/business_default_padding"
        android:paddingRight="@dimen/business_default_padding" >

        <ImageView
            android:id="@+id/imgBusinessIcon"
            android:layout_width="@dimen/business_image_size"
            android:layout_height="@dimen/business_image_size"
            android:layout_marginRight="@dimen/business_default_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSendPrice"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起送价" />

            <TextView
                android:id="@+id/tvDistributingFee"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送费" />

            <TextView
                android:id="@+id/tvtvSpecialOffer"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特别优惠" />

            <TextView
                android:id="@+id/tvOpenTime"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业时间" />

            <TextView
                android:id="@+id/tvOpenDate"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开店日期" />

            <TextView
                android:id="@+id/tvPhone"
                style="@style/BusinessFragmentInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/business_btn_height"
        android:layout_marginBottom="@dimen/default_item_gap"
        android:layout_marginLeft="@dimen/business_default_padding"
        android:layout_marginRight="@dimen/business_default_padding"
        android:layout_marginTop="@dimen/default_text_padding"
        android:background="@color/default_more_light_blue"
        android:drawablePadding="@dimen/default_text_padding"
        android:drawableRight="@drawable/ic_navigation"
        android:gravity="center"
        android:paddingLeft="@dimen/default_text_padding"
        android:paddingRight="@dimen/default_text_padding"
        android:text="地址"
        android:textColor="@color/default_white" />

    <EditText
        android:id="@+id/edtSearch"
        style="@style/SearchFragmentDarkGrayText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchfragment_edit_height"
        android:layout_marginBottom="@dimen/default_item_gap"
        android:layout_marginLeft="@dimen/business_default_padding"
        android:layout_marginRight="@dimen/business_default_padding"
        android:background="@drawable/bg_edit"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="@dimen/default_text_padding"
        android:gravity="center"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:paddingLeft="@dimen/default_text_padding"
        android:paddingRight="@dimen/default_text_padding"
        android:singleLine="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp" >
        </LinearLayout>
    </HorizontalScrollView>

    <GridView
        android:id="@+id/gridView"
        style="@style/ScrollbarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/business_grid_view_bg"
        android:horizontalSpacing="@dimen/default_divide_line"
        android:listSelector="@color/default_transparent"
        android:numColumns="3"
        android:verticalSpacing="@dimen/default_divide_line" />

</LinearLayout>