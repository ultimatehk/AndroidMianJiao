<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/goods_list_adapter_item_padding"
        android:paddingRight="@dimen/goods_list_adapter_item_padding" >

        <ImageView
            android:id="@+id/imgGoodImg"
            android:layout_width="@dimen/goods_list_adapter_item_good_img_size"
            android:layout_height="@dimen/goods_list_adapter_item_good_img_size"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/default_text_padding"
            android:layout_marginRight="@dimen/default_item_gap"
            android:layout_marginTop="@dimen/default_text_padding" />

        <TextView
            android:id="@+id/tvGoodName"
            style="@style/GoodsListAdapterGoodNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgGoodImg"
            android:layout_toRightOf="@id/imgGoodImg"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvOfficialPrice"
            style="@style/GoodsListAdapterRMBText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvGoodPrice"
            android:layout_marginRight="@dimen/default_item_gap"
            android:layout_toRightOf="@id/imgGoodImg"
            android:text="@string/official_price" />

        <TextView
            android:id="@+id/tvRMB"
            style="@style/GoodsListAdapterRMBText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvGoodPrice"
            android:layout_marginRight="@dimen/default_item_gap"
            android:layout_toRightOf="@id/tvOfficialPrice"
            android:text="@string/symbol_rmb" />

        <TextView
            android:id="@+id/tvGoodPrice"
            style="@style/GoodsListAdapterGoodPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGoodName"
            android:layout_marginTop="@dimen/default_text_padding"
            android:layout_toRightOf="@id/tvRMB" />

        <TextView
            android:id="@+id/tvGoodInfo"
            style="@style/GoodsListAdapterDistanceAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRMB"
            android:layout_marginBottom="@dimen/default_text_padding"
            android:layout_marginTop="@dimen/default_text_padding"
            android:layout_toRightOf="@id/imgGoodImg" />
    </RelativeLayout>

    <View
        style="@style/DefaultHorizontalDivideLine"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/goods_list_adapter_item_padding"
        android:layout_marginRight="@dimen/goods_list_adapter_item_padding" />

    <ListView
        android:id="@+id/listView"
        style="@style/ListViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>