<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.leaven.mianjiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.leaven.mianjiao.view.LeftHeadLineView
        android:id="@+id/leftHeadLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_line_height"
        app:headline_title="@string/user_info" />

    <RelativeLayout
        android:id="@+id/userInfoContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_open_content_bg"
        android:padding="@dimen/user_certer_default_padding" >

        <ImageView
            android:id="@+id/imgUserAvatar"
            android:layout_width="@dimen/user_certer_user_avatar_size"
            android:layout_height="@dimen/user_certer_user_avatar_size"
            android:layout_marginRight="@dimen/user_certer_default_padding" />

        <com.leaven.mianjiao.view.UserCenterViewSwitcher
            android:id="@+id/userNickSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgUserAvatar" />

        <com.leaven.mianjiao.view.UserCenterViewSwitcher
            android:id="@+id/userEmailSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNickSwitcher"
            android:layout_toRightOf="@id/imgUserAvatar" />

        <com.leaven.mianjiao.view.UserCenterViewSwitcher
            android:id="@+id/userNameSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userEmailSwitcher"
            android:layout_toRightOf="@id/imgUserAvatar" />

        <com.leaven.mianjiao.view.UserCenterViewSwitcher
            android:id="@+id/passwordSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameSwitcher"
            android:layout_toRightOf="@id/imgUserAvatar" />
    </RelativeLayout>

</LinearLayout>