<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.leaven.mianjiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.leaven.mianjiao.view.HeadLineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_line_height"
        app:headline_title="@string/delivery_address" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding" >

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="78945612301"
            android:textColor="@color/default_dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/default_text_padding"
            android:layout_toLeftOf="@id/tvPhone"
            android:text="联系人：李杰"
            android:textColor="@color/default_dark_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="@dimen/default_text_padding"
            android:text="北京市朝阳区五里桥二街一号院北一号楼0731室"
            android:textColor="@color/default_light_blue"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/default_text_padding"
            android:layout_toRightOf="@id/tvPhone"
            android:gravity="right"
            android:text="修改"
            android:textColor="@color/default_blue"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>