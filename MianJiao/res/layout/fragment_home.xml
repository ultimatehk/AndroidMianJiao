<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btnLocation"
            style="@style/HomeFragmentDarkGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="位置" />

        <EditText
            android:id="@+id/edtSearch"
            style="@style/HomeFragmentDarkGrayText"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/default_text_padding"
            android:paddingRight="@dimen/default_text_padding"
            android:singleLine="true" >
        </EditText>

        <TextView
            android:id="@+id/btnScan"
            style="@style/HomeFragmentDarkGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:text="扫描" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_text_padding"
        android:layout_marginTop="@dimen/default_text_padding"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btnDistance"
            style="@style/HomeFragmentSelectTabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近距离" />

        <TextView
            android:id="@+id/btnPrice"
            style="@style/HomeFragmentSelectTabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低价格" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>