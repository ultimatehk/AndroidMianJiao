<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.leaven.mianjiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.leaven.mianjiao.view.LeftHeadLineView
        android:id="@+id/headLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_line_height"
        app:headline_title="@string/about_us" />

    <TextView
        android:id="@+id/tvAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_open_content_bg"
        android:padding="@dimen/default_padding"
        android:text="@string/about_us_content"
        android:textColor="@color/default_blue"
        android:textSize="@dimen/user_center_about_us_text_size"
        android:visibility="gone" />

</LinearLayout>